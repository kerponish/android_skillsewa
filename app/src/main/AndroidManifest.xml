<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kotlinsample">

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kotlinsample"
        tools:targetApi="31">

        <activity
            android:name=".view.UserProfileActivity"
            android:exported="true"
            android:label="Edit Profile"
            android:theme="@style/Theme.Kotlinsample" />
        <activity
            android:name=".view.UserProfileViewActivity"
            android:exported="true"
            android:label="View User"
            android:theme="@style/Theme.Kotlinsample" />

        <activity
            android:name=".view.UpdateProductActivity"
            android:exported="false"
            android:label="@string/title_activity_update_product"
            android:theme="@style/Theme.Kotlinsample" />
        <activity
            android:name=".view.GetProductsActivity"
            android:exported="false"
            android:label="@string/title_activity_get_product"
            android:theme="@style/Theme.Kotlinsample" /> <!-- Splash Screen - Launcher Activity -->
        <activity
            android:name=".view.Splash"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.Kotlinsample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".view.SkillsLoginActivity"
            android:exported="true"
            android:label="skillslogin"
            android:theme="@style/Theme.Kotlinsample" /> <!-- Signup Activity -->
        <activity
            android:name=".view.signup"
            android:exported="true"
            android:label="signup"
            android:theme="@style/Theme.Kotlinsample" /> <!-- Navigation Activity -->
        <activity
            android:name=".view.NavigationActivity"
            android:exported="true"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.Kotlinsample" /> <!-- Add Product Activity -->
        <activity
            android:name=".view.AddProductActivity"
            android:exported="false"
            android:label="@string/title_activity_add_product"
            android:theme="@style/Theme.Kotlinsample" /> <!-- Forget Password Activity -->
        <activity
            android:name=".view.ForgetPassword"
            android:exported="false"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/Theme.Kotlinsample" />
    </application>

</manifest>