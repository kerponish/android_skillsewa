<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kotlinsample">

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kotlinsample"
        tools:targetApi="31">

        <!-- Launcher Activity -->
        <activity
            android:name=".view.Splash"
            android:exported="true"
            android:theme="@style/Theme.Kotlinsample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".view.SkillsLoginActivity"
            android:exported="false"
            android:label="Login"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- Signup Activity -->
        <activity
            android:name=".view.signup"
            android:exported="false"
            android:label="Sign Up"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- Main Navigation Activity -->
        <activity
            android:name=".view.NavigationActivity"
            android:exported="false"
            android:label="Navigation"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- Profile Activity -->
        <activity
            android:name=".view.Profile"
            android:exported="false"
            android:label="Profile"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- Main Activity -->
        <activity
            android:name=".view.MainActivity"
            android:exported="false"
            android:label="Main"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- User Profile Activity -->
        <activity
            android:name=".view.UserProfileActivity"
            android:exported="false"
            android:label="Edit Profile"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- Edit Profile Activity -->
        <activity
            android:name=".view.EditProfile"
            android:exported="false"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- Add Service Activity -->
        <activity
            android:name=".view.AddServiceActivity"
            android:exported="false"
            android:label="Add Service"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- Update Service Activity -->
        <activity
            android:name=".view.UpdateServiceActivity"
            android:exported="false"
            android:label="Update Service"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- Add Task Activity -->
        <activity
            android:name=".view.AddTaskActivity"
            android:exported="false"
            android:label="Post Task"
            android:theme="@style/Theme.Kotlinsample" />

        <!-- Forget Password Activity -->
        <activity
            android:name=".view.ForgetPassword"
            android:exported="false"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/Theme.Kotlinsample" />

    </application>

</manifest>